{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "downlevelIteration": true,
    "esModuleInterop": true,
    "noEmitOnError": false,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "strict": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./../../node_modules/@types",
      "./@types"
    ]
  },
  "include": ["src", "@types"]
}
